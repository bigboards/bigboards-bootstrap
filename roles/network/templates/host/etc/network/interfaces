auto lo
iface lo inet loopback

{% if hex.arch == 'arm' %}
# physical network interface
auto eth0
iface eth0 inet manual
    address {{hex.range}}.{{ node.sequence }}
    netmask 255.0.0.0

auto eth0:0
iface eth0:0 inet dhcp

{% endif %}

